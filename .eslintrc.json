{
	"rules": {
		"react/no-unescaped-entities": [
			"error",
			{
				"forbid": [
					">",
					"}"
				]
			}
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"simple-import-sort/imports": "error"
	},
	"plugins": [
		"simple-import-sort"
	],
	"extends": [
		"plugin:import/recommended",
		"plugin:import/typescript",
		"plugin:tailwindcss/recommended",
		"next/core-web-vitals"
	]
}
